# =============================================================
# ReAct vs Rigid Plan - AI Recursive Q&A Tuneup App
# Environment Configuration
# =============================================================

# --- Django Backend ---
DJANGO_SECRET_KEY=change-me-to-a-random-secret-key-in-production
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,172.168.1.95,0.0.0.0
DJANGO_CORS_ALLOWED_ORIGINS=http://localhost:3081,http://127.0.0.1:3081,http://172.168.1.95:3081

# --- PostgreSQL ---
POSTGRES_DB=react_rigid_db
POSTGRES_USER=appuser
POSTGRES_PASSWORD=changeme_db_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5433

# --- Redis ---
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379

# --- OpenAI ---
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=https://api.openai.com/v1

# --- LangSmith ---
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your-langsmith-api-key-here
LANGCHAIN_PROJECT=react-vs-rigid-qa-app
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# --- Langfuse ---
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
LANGFUSE_SECRET_KEY=your-langfuse-secret-key
LANGFUSE_HOST=https://cloud.langfuse.com

# --- Application Ports (non-default to avoid conflicts) ---
FRONTEND_PORT=3081
BACKEND_PORT=8042
POSTGRES_EXTERNAL_PORT=5437
REDIS_EXTERNAL_PORT=6383
FLOWER_PORT=5556
WEBSOCKET_PORT=8043

# --- Site Access ---
SITE_HOST=172.168.1.95
SITE_URL=http://172.168.1.95:3081

# --- Celery ---
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# --- MCP ---
MCP_SERVER_PORT=8044
MCP_ENABLED=true

# --- A2A (Agent-to-Agent) ---
A2A_SERVER_PORT=8045
A2A_ENABLED=true
